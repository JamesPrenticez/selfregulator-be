model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  email           String   @unique
  passwordHash    String
  firstName       String?
  lastName        String?
  phone           String?
  profilePicture  String?
  locale          String?
  country         String?
  permissions     String?
  subscription    String?
  dateCreated     DateTime @default(now())
  lastModified    DateTime @updatedAt @default(now())
}

model Test {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  someData        String   @unique
}
